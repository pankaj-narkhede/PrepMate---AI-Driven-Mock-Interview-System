{
  "compilerOptions": {
    "module": "ESNext",
    "types": ["node"],

    "baseUrl": ".",                       
    "paths": {
      "@/*": ["src/*"]                    
    },

    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src", "vite.config.ts"]
}
